{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "port": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/**/*.js",
        "${workspaceFolder}/**/*.js",
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/**/*.tsx"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug with Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": [
        "node_modules/**",
        "chrome-error://*",
        "webpack://*"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/**/*.js",
        "${workspaceFolder}/**/*.js",
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/**/*.tsx"
      ],
      "trace": true
    }
  ]
}
